
<section style="top: 0px;" id="resume_section" class="ui fullscreen modal scrolling transition hidden">

		<!--==================================
			START === Header
		===================================-->
		<div class="header">
			<div class="ui grid">
			    <div class="two column row">
			        <div class="left floated column">
			        	<div class="ui header backBtn">
							<i class="chevron glyphicon glyphicon-chevron-left"></i>
							<div class="content">
								Trở về
							</div>
						</div>
			        </div>
			        <div class="right floated column">
			        	<h2 class="ui header">
							<i class="glyphicon glyphicon-calendar"></i>
							<span class="content">
								Lịch Trình
							</span>
						</h2>
			        </div>
			    </div>
			</div>
		</div>
		<!--==================================
			END === Header
		===================================-->

		<!--==================================
			START === Content
		===================================-->
		<div class="content">
			<div class="ui container">
				<div class="ui grid">
					<div class="sixteen wide column">

						<!--==================================
							START === Resume Filters
						===================================-->
						<div class="ui labeled icon four item stackable menu" id="filter-resume-group" data-anim-effect="fadeInDown">
						    <a class="item active" data-group="education">
						        <i class="glyphicon glyphicon-th-list"></i> Lịch chạy
						    </a>
						    <a class="item" data-group="experience">
						        <i class="glyphicon glyphicon-align-justify"></i> Lịch trống
						    </a>
						    <a class="item" data-group="skills">
						        <i class="glyphicon glyphicon-stats"></i> Thống Kê
						    </a>
						    <a class="item " data-group="testimonials">
						        <i class="glyphicon glyphicon-comment"></i> Dịch vụ
						    </a>
						</div>
						<!--==================================
							END === Resume Filters
						===================================-->

						<!--==================================
							START === Education Section
						===================================-->
						<div style="display: block;" class="resume-section education">
							<div class="timeline-container">
								<% 
								@tm = 100
								if @schedules.length == 0 %>
									<%= render "schedule/tab1_nonecal" %>
								<% else %>
									<%= render "schedule/tab1_cal" %>
								<%end%>

							</div>
						</div>
						<!--==================================
							END === Education Section
						===================================-->

						<!--==================================
							START === Experience Section
						===================================-->
						<div style="display: none;" class="resume-section experience">
							<div class="timeline-container">
								<% 
								@tm = 100
								@tt = Time.now
								@et = Time.now + 6.months
								if @schedules.length == 0 %>
									<%= render "schedule/tab2_nonecal" %>

								<% else %>
									<%= render "schedule/tab2_cal" %>
								<% end %>
								
							</div>
						</div>

						<!--==================================
							END === Experience Section
						===================================-->

						<!--==================================
							START === Skills Section
						===================================-->
						<div style="display: none;" class="resume-section skills">
							<div class="ui grid">
								<div class="ui text container">
									<%= render "schedule/tab3_chart" %>
								</div>
							</div>
						</div>
						<!--==================================
							END === Skills Section
						===================================-->

						<!--==================================
							START === Testimonials Section 
						===================================-->
						<div style="display: none;" class="resume-section testimonials">
							<div class="ui one column stackable grid">
								<%= render "schedule/tab4_service" %>
							</div>
						</div>
						<!--==================================
							END === Testimonials Section
						===================================-->

					</div>
				</div>
			</div>
		</div>
		<!--==================================
			END === Content
		===================================-->

	</section>