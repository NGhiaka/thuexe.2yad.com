
		<div class="login">
			<div class="panel-heading">
				<h1 class="text-center">Đăng Nhập</h1>
			</div>
			<div class="panel-body">
				<%= form_tag sessions_path , :class=>"form-horizontal has-success" do %>
					<div class="form-group">
						<%= label_tag :username, "Tên đăng nhập" %><br>
						<div class="input-group">
							<div class="input-group-addon"><i class="glyphicon glyphicon-user"></i></div>
							<%= text_field_tag :username,nil, class: 'form-control' %>
							
						</div>
					</div>
					<div class="form-group">
					    <%= label_tag :password, "Mật khẩu" %><br>
					    <div class="input-group">
							<div class="input-group-addon"><i class="glyphicon glyphicon-sunglasses"></i></div>
							<%= password_field_tag :password, nil, class: 'form-control' %>
						</div>
					</div>
					  <div class="form-group btnlogin">
					    <%= submit_tag "Đăng nhập",  class: "btn btn-lg btn-success btn-block" %>
					</div>
				<% end %>
			</div>
		</div>
