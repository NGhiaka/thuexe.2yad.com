<div class="row">
  <div class="col-lg-12">
      <h1 class="page-header">Ảnh</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>


<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <p id="notice"><%= notice %></p>

      <div class="panel-heading">
        Hình ảnh du lịch
      </div>
      <div class="panel-body">
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
          <thead>
            <tr>
              <th>Nội dung</th>
              <th>Chủ đề</th>
              <th>Ảnh</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @travels.each do |travel| %>
              <tr>
                <td><%= travel.title %></td>
                <td><%= travel.idtype %></td>
                <td><%= image_tag "file://"+travel.image.url %></td>
                <td><%= link_to 'Chi tiết', travel %></td>
                <td><%= link_to 'Chỉnh sữa', edit_travel_path(travel) %></td>
                <td><%= link_to 'Xóa', travel, method: :delete, data: { confirm: 'Bạn muốn xóa ảnh này?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= will_paginate @travels, renderer:BootstrapPagination::Rails %>
      </div>
    </div>
  </div>
</div>    
