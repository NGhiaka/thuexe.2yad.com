
<div class="row">
  <div class="col-lg-12">
      <h1 class="page-header">Lịch trình</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <p id="notice"><%= notice %></p>

      <div class="panel-heading">
          Danh sách lịch trình xe chạy
      </div>
      <div class="panel-body">
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
          <thead>
            <tr>
              <th>Ngày đi</th>
              <th>Ngày về</th>
              <th>Điểm bắt đầu</th>
              <th>Điểm đến</th>
              <th colspan="3" class="center">Tùy chọn</th>
            </tr>
          </thead>

          <tbody>
            <% @schedules.each do |schedule| %>
              <tr>
                <td><%= schedule.startdate.strftime("%d/%m/%Y") %></td>
                <td><%= schedule.enddate.strftime("%d/%m/%Y") %></td>
                <td><%= schedule.startplace %></td>
                <td><%= schedule.endplace %></td>
                <td><%= link_to 'Chi tiết', schedule %></td>
                <td><%= link_to 'Chỉnh sữa', edit_schedule_path(schedule) %></td>
                <td><%= link_to 'Xóa', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>

        </table>
        <%= will_paginate @schedules, renderer:BootstrapPagination::Rails %>
      </div>
    </div>
  </div>    
</div>