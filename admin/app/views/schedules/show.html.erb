<div class="row">
  <div class="col-lg-12">
      <h1 class="page-header">Lịch trình</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <p id="notice"><%= notice %></p>

      <div class="panel-heading">
          Danh sách lịch trình xe chạy
      </div>
      <div class="panel-body">
        <p id="notice"><%= notice %></p>


		<p>
		  <strong>Ngày khởi hành: </strong>
		  <%= @schedule.startdate.strftime("%d/%m/%Y") %>
		</p>

		<p>
		  <strong>Ngày trở về: </strong>
		  <%= @schedule.enddate.strftime("%d/%m/%Y") %>
		</p>

		<p>
		  <strong>Điểm khởi hành: </strong>
		  <%= @schedule.startplace %>
		</p>

		<p>
		  <strong>Điểm du lịch: </strong>
		  <%= @schedule.endplace %>
		</p>

		<%= link_to 'Chỉnh sữa', edit_schedule_path(@schedule) %> |
		<%= link_to 'Quay lại', schedules_path %>

		      </div>
    </div>
  </div>    
</div>

